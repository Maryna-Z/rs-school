mixin eventForm(event = {})
  form(action=`/administrator/add/${event._id || ''}` method="POST" class="card")
    label(for="name") name
    input(name="name" type="text" value=event.name)
    label(for="description") Description
    textarea(name="description")= event.description
    label(for="address") Address
    input(type="text" id="address" name="location[address]" value=(event.location && event.location.address))
    label(for="lng") Address Lng
    input(type="text" id="lnd" name="location[coordinates][0]" value=(event.location && event.location.coordinates[0]) required)
    label(for="lat") Address Lat
    input(type="text" id="lat" name="location[coordinates][1]" value=(event.location && event.location.coordinates[1]) required)
    - const choices = ['Event', 'Webinar', 'Workshop', 'Deadline', 'Lecture']
    - const tags = event.tags || []
    ul.tags
      each choice in choices
        .tag.tag__choice
          input(type="checkbox" id=choice value=choice name="tags" checked=(tags.includes(choice)))
          label(for=choice) #{choice}
    input(type="submit" value="Save" class="button")
